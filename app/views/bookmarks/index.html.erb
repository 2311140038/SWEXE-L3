<h1>書籍登録</h1>
<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>

<% @bookmarks.each do |book| %>
  <p>
    <%= book.title %>
    <%= book.url %>
    <%= book.name %>
    <%= link_to '削除', "/bookmarks/#{book.id}", data: {turbo_method: :delete} %>
    <%= link_to '表示', "/bookmarks/#{book.id}" %>
    <%= link_to '編集', "/bookmarks/#{book.id}/edit" %>
  </p>
<% end %>
<p><%= link_to '新規追加', '/bookmarks/new' %></p>